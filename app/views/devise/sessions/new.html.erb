<article class="bg-grey-light pt6 pb6 border-top">
  <section class="container p2">
    <div class="col-center col-max-6">
      <div class="bg-white p4">
        <h2>Sign in</h2>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div><%= f.email_field :email, :autofocus => true, placeholder: "Email", class: "mb1" %></div>
          <div><%= f.password_field :password, placeholder: "Password", class: "mb1" %></div>

          <div class="mb4">
            <%= f.submit "Sign in", class: "button-solid button-green" %>
            <% if devise_mapping.rememberable? -%>
            <div class="clearfix">
              <div class="checkbox small pt2 pb3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "clearfix" %>
              </div>
            </div>
            <% end -%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
</article>
